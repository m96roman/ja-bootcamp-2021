@model IEnumerable<MVCDayOne.Models.UserModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowUsers</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "CreateUser")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @using (Html.BeginForm("Edit", "User", FormMethod.Post))
                    {
                        @Html.Hidden("id", item.Id);
                        <input type="submit" name="Edit" value="Edit">
                    }
                    @using (Html.BeginForm("DeleteUser", "User", FormMethod.Post))
                    {
                        @Html.Hidden("id", item.Id);
                        <input type="submit" name="FirstName" value="Delete" class="btn btn-default" />
                    }
                </td>
            </tr>
        }

    </table>
</body>
</html>
