
@using WebApplication1.Models

@model IEnumerable<WebApplication1.Models.User>

<table id="UserList" class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="item" data-id="@item.Id">
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <input type="button" class="btn btn-info" value="Edit" onclick="location.href='@Url.Action("Edit", "User",new {id = item.Id})'" />
                <input type="button" data-id="@item.Id" value="Delete" class="delete" />
            </td>
        </tr>
    }

</table>


