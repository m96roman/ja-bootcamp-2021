@model IEnumerable<WebApplication1.Models.User>


@if (Model.Count() > 0)
{


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id}, new
                    {
                        @class = "btn btn-primary btn-large"

                    }) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id}, new
                    {
                        @class = "btn btn-primary btn-large"

                    })
                </td>
            </tr>
        }

    </table>
}
else
{
    <h3>We don`t have user! Please create</h3>
}
<div>
    <p>
        @Html.ActionLink("Create New", "Create","User",null,new
        {
            @class= "btn btn-primary btn-large"

        })

    </p>

</div>

