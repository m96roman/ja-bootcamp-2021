@using WEB_TASK1.Models

@model List<UserModel>

@{
    ViewData["Title"] = "Users";
}
<div style="display:flex; flex-direction:row; width:100%; justify-content:space-between" >
    <div style="display: flex; flex-direction: column; width:45%">
        <h1>@ViewData["Title"] Delete</h1>
        @using (Html.BeginForm("DeleteUser", "Home", FormMethod.Post, new { data_formType = "string" }))
        {
            <div class="form-group">
                <label for="exampleInputEmail1">ID User</label>
                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="id">
                <small id="emailHelp" class="form-text text-muted">Еhis field must be filled</small>
            </div>
            <button type="submit" class="btn btn-danger">Delete</button>
        }
    </div>

    <div style="display: flex; flex-direction: column; width: 45% ">
        <h1>@ViewData["Title"] Edit</h1>
        @using (Html.BeginForm("EditUser", "Home", FormMethod.Post, new { data_formType = "UserModel" }))
        {
            <div class="form-group">
                <label for="exampleInputEmail1">User ID</label>
                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="userId">               
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Name</label>
                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Name" name="userName">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Surname</label>
                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Surname" name="userSurname">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        }     
    </div>
</div>


<div class="col-md-12" style="margin-top: 50px">
    <table id="tblStudent" class="table table-striped">
        <thead class="thead-light">
            <tr class="col-md-12">
                <th align="left" class="productth">ID</th>
                <th align="left" class="productth">User Name</th>
                <th align="left" class="productth">User Address</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var user in Model)
                {
                    <tr>
                        <th align="left" class=" col-2">@user.UserId </th>
                        <th align="left" class=" col-5">@user.UserName</th>
                        <th align="left" class=" col-5">@user.UserSurname</th>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

